#!/bin/bash

PARM=$1


ps -ef | grep pmon | grep -v grep | grep -v perl | grep -v ASM |\
while read PMON; do
  INST=`echo "$PMON" | awk {' print $8 '} | cut -f3 -d_`

  MAIN_ENV=~/.env/main.env
  if [ -r $MAIN_ENV ]; then
     . $MAIN_ENV $INST
  else
     echo 'Could not open $MAIN_ENV for read.'
  fi

  echo $INST

  sqlplus -s /nolog <<-EOF
  connect / as sysdba
  alter system set cpu_count=8 scope=both sid='*';
  alter system set resource_manager_plan=default_plan scope=both sid='*';
EOF

done

