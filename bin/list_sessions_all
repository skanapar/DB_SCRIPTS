#!/bin/bash

ps -ef | grep pmon | grep -v grep | grep -v perl | grep -v ASM | grep -v DBFS |\
while read PMON; do
   INST=`echo "$PMON" | awk {' print $8 '} | cut -f3 -d_`
  echo $INST

  MAIN_ENV=~/.env/main.env
  if [ -r $MAIN_ENV ]; then
     . $MAIN_ENV $INST
  else
     echo 'Could not open $MAIN_ENV for read.'
  fi


  sqlplus -s /nolog <<-EOF
  connect / as sysdba
  set head off
  set lines 200
  set echo off
  set feedback off
  select 'Connected to: '|| INSTANCE_NAME from v\$instance;
  SELECT inst_id, username, sid, serial#, module, terminal 
    FROM gv\$session 
   WHERE username is not null and username not in ('SYS','SYSTEM','DBSNMP')
   order by inst_id, terminal;
  set echo on
  set feedback on 
EOF

done

