#!/bin/bash

ps -ef | grep pmon | grep -v grep | grep -v perl | grep -v ASM | grep -v DBFS |\
while read PMON; do
  INST=`echo "$PMON" | awk {' print $8 '} | cut -f3 -d_`
  echo $INST

  MAIN_ENV=~/.env/main.env
  if [ -r $MAIN_ENV ]; then
     . $MAIN_ENV $INST
  else
     echo 'Could not open $MAIN_ENV for read.'
  fi

  sqlplus -s /nolog <<-EOF
  connect / as sysdba
  set head off
  select 'Date: ' || to_char(sysdate,'YYYY-MM-DD HH24:MI:SS') from dual;

  select 'Connected to: '|| INSTANCE_NAME from v\$instance;

  prompt Flush Shared Pool
  alter system flush shared_pool;

EOF
  echo '---------------------------------------------------------------'
  echo
done
