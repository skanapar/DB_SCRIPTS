# --------------------------------------
# ---- Import Python Modules -----------
# --------------------------------------
from optparse     import OptionParser
from sys          import exit

Usage  = '\n\n-------------------------------------------------------------------------------'
Usage += '\nReports relative database load generated by a specified group of users in'
Usage += '\ncontrast to all other users in the database.'
ArgParser = OptionParser(Usage)

ArgParser.add_option('--showinst', dest='ShowInst',       action='store_true', default=False,                           help="test....")
ArgParser.add_option('--showver', dest='ShowVer',         action='store_true', default=False,                           help="print SQL query.")
ArgParser.add_option('--v', dest='ShowVer',    action='store_true', default=False,                           help="print version info.")

# Parse command line arguments
Options, args = ArgParser.parse_args()

exit(0)
