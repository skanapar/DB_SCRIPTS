#!/bin/bash

ps -ef | grep pmon | grep -v grep | grep -v perl | grep -v ASM |\
while read PMON; do
   INST=`echo $PMON | awk {' print $8 '} | cut -f3 -d_`
  echo "instance: $INST"

  MAIN_ENV=~/.env/main.env
  if [ -r $MAIN_ENV ]; then
     . $MAIN_ENV $INST
  else
     echo 'Could not open $MAIN_ENV for read.'
  fi

  sqlplus -s /nolog <<-EOF
  connect / as sysdba
  set head off
  set tab off
  set trimspool on

  set head on
  set lines 155
  col name for a20
  col value for a30

  select name, value/1024/1024/1024 value_gb
    from ( select name, value
             from ( select i.ksppinm    name,
                           sv.ksppstvl  value
                      from sys.x\$ksppi i,
                           sys.x\$ksppsv sv
                     where i.indx = sv.indx ))
   where name in ('pga_aggregate_target',
                  'shared_pool_size',
                  'db_cache_size',
                  'java_pool_size',
                  'large_pool_size',
                  'sga_target',
                  'sga_max_size',
                  'memory_max_target',
                  'memory_target')
  order by 1;

EOF
echo '-----'

